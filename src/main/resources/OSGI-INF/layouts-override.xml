<?xml version="1.0" encoding="UTF-8"?>

<component name="studio.extensions.tdelprat-SANDBOX.override" version="1.0.0">
  <require>studio.extensions.tdelprat-SANDBOX</require>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager" point="layouts">

    <layout name="masterForm@edit">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
        </template>
      </templates>
      <rows>
        <row>
          <properties mode="any">
            <property name="nxl_colspan_0">1</property>
          </properties>
          <widget>name</widget>
        </row>
        <row>
          <properties mode="any">
            <property name="nxl_colspan_0">1</property>
          </properties>
          <widget>fieldA</widget>
        </row>
        <row>
          <properties mode="any">
            <property name="nxl_colspan_0">1</property>
          </properties>
          <widget>fieldB</widget>
        </row>
        <row>
          <properties mode="any">
            <property name="nxl_colspan_0">1</property>
          </properties>
          <widget>complexSelector</widget>
        </row>
      </rows>
      <widget name="name" type="text">
        <labels>
          <label mode="any">Name</label>
        </labels>
        <translated>false</translated>
        <fields>
          <field>ds:name</field>
        </fields>
      </widget>
      <widget name="fieldA" type="text">
        <labels>
          <label mode="any">FieldA</label>
        </labels>
        <translated>false</translated>
        <fields>
          <field>ds:fieldA</field>
        </fields>
      </widget>
      <widget name="fieldB" type="text">
        <labels>
          <label mode="any">FieldB</label>
        </labels>
        <translated>false</translated>
        <fields>
          <field>ds:fieldB</field>
        </fields>
      </widget>
      <widget name="complexSelector" type="template">
        <labels>
          <label mode="any">ComplexSelector 2</label>
        </labels>
        <translated>false</translated>
        <fields>
          <field>ds:complexSelector</field>
        </fields>
        <properties widgetMode="edit">
          <property name="template2">/widgets/complexSelector_widget_template.xhtml</property>
          <property name="template">/widgets/complexSuggestSelector_widget_template.xhtml</property>
          <!-- <property name="valueChangeListener">#{complexSelectorBean.valueChanged}</property> -->
          <property name="directoryName">nature</property>
          <property name="multiple">false</property>
          <property name="localize">true</property>
          <property name="labelFieldName">label</property>
          <property name="dbl10n">false</property>
          <property name="nestedLayout">complexListForm@create</property>
          <property name="onchange">updateSubTree();</property>
        </properties>
      </widget>
    </layout>


  </extension>

</component>